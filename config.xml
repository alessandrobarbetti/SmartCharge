<?xml version='1.0' encoding='utf-8'?>
<widget id="eu.laika.smartcharge" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SmartCharge</name>
    <icon src="icon.png" />
    <!-- iPhone 6 / 6+ -->
    <icon src="www/images/icons/icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="www/images/icons/icon-60.png" platform="ios" width="60" height="60" />
    <icon src="www/images/icons/icon-60@2x.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="www/images/icons/icon-76.png" platform="ios" width="76" height="76" />
    <icon src="www/images/icons/icon-76@2x.png" platform="ios" width="152" height="152" />
    <icon src="www/images/icons/icon-83.5@2x.png" platform="ios" width="167" height="167" />

    <!-- Settings Icon -->
    <icon src="www/images/icons/icon-small.png" platform="ios" width="29" height="29" />
    <icon src="www/images/icons/icon-small@2x.png" platform="ios" width="58" height="58" />
    <icon src="www/images/icons/icon-small@3x.png" platform="ios" width="87" height="87" />

    <!-- Spotlight Icon -->
    <icon src="www/images/icons/icon-40.png" platform="ios" width="40" height="40" />
    <icon src="www/images/icons/icon-40@2x.png" platform="ios" width="80" height="80" />
    <icon src="www/images/icons/icon-40@3x.png" platform="ios" width="120" height="120" />

    <icon src="www/images/icons/ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="www/images/icons/mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="www/images/icons/hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="www/images/icons/xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="www/images/icons/xxhdpi.png" platform="android" qualifier="xxhdpi" />


    <!-- iPhone and iPod touch -->
    <splash src="splash.png" />
    <splash src="www/images/splashes/Default.png" platform="ios" width="320" height="480" />
    <splash src="www/images/splashes/Default@2x.png" platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="www/images/splashes/Default-568h@2x.png" platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <splash src="www/images/splashes/Default-667h@2x.png" platform="ios" width="750" height="1334" />
    <splash src="www/images/splashes/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
    <splash src="www/images/splashes/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />

    <!-- iPad -->
    <splash src="www/images/splashes/Default-Portrait.png" platform="ios" width="768" height="1024" />
    <splash src="www/images/splashes/Default-Landscape.png" platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <splash src="www/images/splashes/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
    <splash src="www/images/splashes/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />

    <splash src="www/images/splashes/ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="www/images/splashes/mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="www/images/splashes/hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="www/images/splashes/xhdpi.png" platform="android" qualifier="xhdpi" />
    <splash src="www/images/splashes/portrait-xxhdpi.png" platform="android" qualifier="port-xxhdpi" />
    <splash src="www/images/splashes/landscape-xxhdpi.png" platform="android" qualifier="land-xxhdpi" />

    <description>
        App per la gestione impianti SmartCharge LaikaLab
    </description>
    <author>
        Alessandro Barbetti
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
